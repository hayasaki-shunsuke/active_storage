<!DOCTYPE html>

<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <strong><%= t '.userEmail' %>: <%= current_user.email %></strong>.
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.variant(resize: '100x100') %>
        <% end %>
        <%= link_to t(:'.edit'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t(:'.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
